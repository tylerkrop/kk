<div class="w-full">
  <div class="flex space-x-2">
    <h1 class="text-2xl font-bold underline">Meetings</h1>
    <%= link_to "New Meeting", new_meeting_path, class: "bg-emerald-700 cursor-pointer hover:bg-emerald-600 font-semibold p-1 rounded-md ml-auto" if user_signed_in? && current_user.admin? %>
  </div>
  <div>
    <% @meetings.each do |meeting| %>
      <div class="bg-emerald-700 p-2 my-4 rounded-md">
        <div class="text-lg"><%= meeting.meeting_time.in_time_zone("America/New_York").to_fs(:long_ordinal) %> (<%= distance_of_time_in_words(DateTime.current, meeting.meeting_time) %>)</div>
        <div>
          <%= link_to meeting.book.title, meeting.book.url, target: "_blank", class: "italic" %> | <%= meeting.reading_expectations %>
        </div>
      </div>
    <% end %>
  </div>
</div>
