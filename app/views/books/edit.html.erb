<div class="w-full">
  <% if flash[:notice] %>
    <div class="bg-green-200 text-green-700 p-1 rounded-md">
      <%= flash[:notice] %>
    </div>
  <% end %>
  <% if flash[:alert] %>
    <div class="bg-red-200 text-red-700 p-1 rounded-md">
      <%= flash[:alert] %>
    </div>
  <% end %>
  <h1 class="text-2xl font-bold underline">Edit Book</h1>
  <%= form_with model: @book, url: book_path(@book), method: :patch, local: true, class: "space-y-2 my-2" do |form| %>
    <div>
      <%= form.label :title, "Title" %>
    </div>
    <div>
      <%= form.text_field :title, class: "border rounded-md p-1" %>
    </div>
    <div>
      <%= form.label :author, "Author" %>
    </div>
    <div>
      <%= form.text_field :author, class: "border rounded-md p-1" %>
    </div>
    <div>
      <%= form.label :url, link_to("StoryGraph URL ↗️", "https://app.thestorygraph.com/", target: "_blank") %>
    </div>
    <div>
      <%= form.text_field :url, class: "border rounded-md p-1" %>
    </div>
    <div class="my-4">
      <%= form.submit "Update Book", class: "bg-emerald-700 cursor-pointer hover:bg-emerald-600 font-semibold p-2 rounded-md" %>
    </div>
  <% end %>
</div>
